{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "find ${workspaceFolder}/src -name \"*.cpp\" | xargs g++ -g -o ${workspaceFolder}/src/main",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "build tests",
      "type": "shell",
      "command": "cd build && cmake -DCMAKE_BUILD_TYPE=Debug . && cmake --build .",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}